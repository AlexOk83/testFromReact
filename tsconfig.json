{
  "compilerOptions": {
    "target": "es5",
    "jsx": "react",
    "noEmitOnError": false,
    "noUnusedLocals": true,
    "removeComments": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "rootDir": "../src",
    "baseUrl": "./",
    "module": "es6",
    "moduleResolution": "node",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "pretty": true,
    "skipLibCheck": true,
    "typeRoots": ["./types"],
    "paths": {
      "pages": ["src/pages"] // Путь относительно "baseUrl".
    }
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}